<!DOCTYPE html>
<html>
	<head>
		<title>LapaKos</title>
	</head>
	<body>
		<!--header-->
		<header>
			<div class="container">
				<!--logo-->
				<div id="logo">
					<a href="/">
						<%= image_tag("logo.png", :alt => "LapaKos") %>
					</a>
				</div>
				<!--end of logo-->
				<!--nav-->
				<nav>
					<ul>
						<li><%= link_to "Login", kosts_path %></li>
						<li><%= link_to "Sign Up", new_pengguna_registration_path	 %></li>
						<li><%= link_to "Kelola Kosan", new_pengguna_registration_path, class: "btkelola" %></li>
					</ul>
				</nav>
				<!--end of nav-->
			</div>

		</header>
		<!--end of header-->
		<!--slider-->
		<section id="slider">
			<!--slider carousel-->
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
			  <!-- Indicators -->
			  <ol class="carousel-indicators">
			    <li data-target="#" data-slide-to="0" class="active"></li>
			    <li data-target="#" data-slide-to="1"></li>
			    <li data-target="#" data-slide-to="2"></li>
			  </ol>

			  <!-- Wrapper for slides -->
			  <div class="carousel-inner">
			    <div class="item active">
			      <%= image_tag("slide3.jpg", :alt => "slide 1", :class => "slider-main") %>
			    </div>

			    <div class="item">
			      <%= image_tag("slide2.jpg", :alt => "slide 2", :class => "slider-main") %>
			    </div>

			    <div class="item">
			      <%= image_tag("slide3.jpg", :alt => "slide 3", :class => "slider-main") %>
			    </div>
			  </div>

			  <!-- Left and right controls -->
			  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
			    <span class="glyphicon glyphicon-chevron-left"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#myCarousel" data-slide="next">
			    <span class="glyphicon glyphicon-chevron-right"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
			<!--end of carousel-->
		</section>
		<!--end of slider-->


		<!--search box-->
		<div class="container">
			<div class="form-group">
					<div>
						<%= form_tag detail_path, class: "searchwrapper", :method => "get" do %>
						    <%= text_field_tag :search, params[:search], class: "form-control", class: "searchmain", placeholder: "ketik alamat kosan" %>
									<%= submit_tag "CARI", :name => nil, class: "btn btn-pink float-right" %>
						<% end %>
					</div>
				</div>
		</div>
		<!--end of searchbox-->

		<!--section dekat kampus-->
		<section id="dekat-kampus">
			<div class="container">
				<h1>Dekat Kampus</h1>
				<div class="row">
					<div class="col-sm-4">
						<div class="profil-kampus">
			      			<%= image_tag("uin.jpg", :alt => "uin") %>
							<h2>UIN BANDUNG</h2>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="profil-kampus">
							<%= image_tag("uin.jpg", :alt => "uin") %>
							<h2>UIN BANDUNG</h2>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="profil-kampus">
							<%= image_tag("uin.jpg", :alt => "uin") %>
							<h2>UIN BANDUNG</h2>
						</div>
					</div>
				</div>

				<!--button selengkapnya-->
				<div class="btn-selengkapnya">
					<a href="#">Selengkapnya</a>
				</div>
				<!--end of buttone selengkapnya-->
			</div>
		</section>
		<!--end of section depan kampus-->

		<!--section widget footer-->
		<section id="widget-footer">
			<div class="container">
					<div class="col-sm-4">
						isi widget
					</div>
					<div class="col-sm-4">
						isi widget
					</div>
					<div class="col-sm-4">
						isi widget
					</div>
				</div>
			</div>
		</section>

		<footer>
			<p>&copy; copyright 2017</p>
		</footer>
		<!--end of widget footer-->

	</body>
</html>
