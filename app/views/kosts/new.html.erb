<% if @kost.errors.any? %>
	<div>
		<% @kost.errors.full_messages.each do |message| %>
			<div><% message %></div><br>
		<% end %>
	</div>
<% end %>

<%= form_for(@kost) do |f| %>
	<div>
		<%= f.file_field :kost_img %>
		<%= f.file_field :kost_img2 %>
	</div>
	<div>
		<%= f.label :'Nama Kos: ' %>
		<%= f.text_field :nama_kos %>
	</div>
	<div>
		<%= f.label :'Harga Kos: ' %>
		<%= f.text_field :harga_kos %>
	</div>
	<div>
		<%= f.label :'Fasilitas: ' %>
		<%= f.text_area :fasilitas %>
	</div>
	<div>
		<%= f.label :'Alamat: ' %>
		<%= f.text_area :alamat %>
	</div>
	<div>
		<%= f.label :'Keterangan Lain' %>
		<%= f.text_area :keterangan_lain %>
	</div>

	<%= f.hidden_field :pengguna_id, :value => current_pengguna.id %>
	<%= current_pengguna.id %>

	<%= f.submit 'submit' %>
<% end %>
